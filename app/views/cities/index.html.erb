<%- model_class = City -%>
<div class='page-header'>
  <h1><p class="text-center"><%=t '.title', :default => model_class.model_name.human.pluralize %></p> </h1>  
</div>
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:state_id) %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @cities.each do |city| %>  
    <tr>
      <td><%= link_to city.id, city_path(city) %></td>
      <td><%= city.description %></td>
      <td><%= city.state.to_label %></td>
      <td><%= link_to('<i class="icon-eye-open"/>'.html_safe, city, :title => t('show') + "#{ }" + "#{ city.description }")  %></td>
      <td><%= link_to('<i class="icon-edit"/>'.html_safe, edit_city_path(city), :title => t('edit') + "#{ city.description }") %></td>
      <td><%= link_to('<i class="icon-remove"/>'.html_safe, city, :method => :delete, :confirm => t('confirmation') + "#{ city.description }", :title => "Delete #{ city.description }") %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<div class="form-actions">
  <%= link_to t('new'), new_city_path, :class => "btn btn-primary" %>
  <%= link_to t('back'), root_path, :class => "btn btn-inverse"%>
  <%= link_to "CSV", cities_path(format: "csv")%>
  <%= link_to "Excel", cities_path(format: "xls")%>
</div>

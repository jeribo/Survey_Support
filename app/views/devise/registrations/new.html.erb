<%- model_class = User -%>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form form-horizontal" }) do |f| %>
  <fieldset>
  	<legend><%= "#{ @user.email } " unless @user.email.nil?  %><%= t(".title")%></legend>
    <div class="form-inputs">
      <%= f.input :email, :required => true, :autofocus => true, :placeholder => "#{t('sample_mail')}" %>
	  <%= f.input :password, :required => true %>
	  <%= f.input :password_confirmation, :required => true %>
	</div>
  </fieldset>
  <div class="form-actions">
    <%= f.button :submit, t(".submit"), :class => 'btn btn-success' %>
    <%= link_to t("cancel"), root_path, :class => "btn btn-inverse" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

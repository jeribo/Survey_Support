<%- model_class = User -%>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form form-horizontal" }) do |f| %>
  <fieldset>
  	<legend><%= "#{ @user.email } " unless @user.email.nil?  %><%= t(".title")%></legend>
	  <div class="input-group">
		<%= f.input :email, :required => false, :autofocus => true, :placeholder => "#{ t('sample_mail') }" %>
		<%= f.input :password, :required => false %>
	    <% if devise_mapping.rememberable? -%>
	      <div class="checkbox">
	      	<label>
	      		<%= f.check_box :remember_me %>
	      	</label>	
		    <%= f.label :remember_me %>
	      </div>
	    <% end %>
	  </div>
  </fieldset>
  <div class="form-actions">
    <%= f.button :submit, t(".submit"), :class => 'btn btn-success' %>
    <%= link_to t(".cancel"), root_path, :class => "btn btn-inverse" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<%- model_class = Event -%>
<div class='page-header'>
  <h1><p class="text-center"><%=t '.title', :default => model_class.model_name.human.pluralize %></p> </h1>  
</div>
<div class="panel panel-default">
  <div class="panel-heading"> <%=t '.title', :default => model_class.model_name.human.pluralize %> </div>
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:description) %></th>
        <th><%= model_class.human_attribute_name(:person_id) %></th>
        <th><%= model_class.human_attribute_name(:start_time) %></th>
        <th><%= model_class.human_attribute_name(:end_time) %></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <% @events.each do |event| %>
    <tr>
      <td><%= link_to event.id, event %></td>
      <td><%= event.description %></td>
      <td><%= event.person.to_label %></td>
      <td><%= l event.start_time, format: :default %></td>
      <td><%= l event.end_time, format: :default %></td>
      <td><%= link_to('<i class="icon-eye-open"/>'.html_safe, event, :title => t('show') + "#{ }" + "#{ event.description }")  %></td>
      <td><%= link_to('<i class="icon-edit"/>'.html_safe, edit_event_path(event), :title => t('edit') + "#{ event.description }") %></td>
      <td><%= link_to('<i class="icon-remove"/>'.html_safe, event, :method => :delete, :confirm => t('confirmation') + "#{ event.description }", :title => "Delete #{ event.description }") %></td>
    </tr>
    <% end %>
  </table>
</div>
<br />
<div class="form-actions">
  <%= link_to t(".new"), new_event_path, :class => "btn btn-success" %>
  <%= link_to t("back"), root_path, :class => "btn btn-inverse" %>
</div>
<%- model_class = Examination -%>
<%= simple_form_for(@examination, :html => {:class => "form form-horizontal"}) do |f| %>
  <fieldset>
  	<legend><%= "#{ @examination.survey.description } " unless @examination.survey.description.nil?  %>
  	  <h1><p class="text-center"><%=t '.title', :default => model_class.model_name.human.titleize %></p> </h1> 
  	</legend>
  	<div class="input-group">
      <%= f.association :survey, :disabled => true %>
      <%= f.input :reference_date, as: :date_picker%>
      <%= f.association :person %>
    </div>
  </fieldset>
  <div class="panel panel-default">
    <div class="panel panel-body">
      <%= f.simple_fields_for :answers  do |a| %>
        <%= a.association :question, :disabled => true %>
        <%= a.input :set, as: :text, :input_html => {:cols => 50, :rows => 3}%>
      <% end %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-success" %>
    <%= link_to t('cancel'), root_path, :class => 'btn btn-inverse'%>
  </div>
<% end %>
